KERNEL=minimal


# ----- Function + Script Area ----- #
start() {
	## Check for Work Area
    if [ ! -d $WORK_AREA ]; then
        ERROR_CODE="WORK_AREA_MISSING"
        endit
    fi
    
    ## Download Library Files for Compiling
    PACKAGE="StarLinux Nebula Libraries"
    PROCESS="Downloading Files..."
    process
    wget https://raw.githubusercontent.com/AwlsomeAlex/StarLinux/new/recipe/core/linux/build.lib -O $WORK_AREA/Source/Library/01_build.lib -q --show-progress || network_timeout # Linux Build Library 
    # Add More Libraries Here
    echo "Libraries have been downloaded."
    
    ## "Recall" Libraries and Execute Build Codes
    PACKAGE="StarLinux Nebula Libraries"
    PROCESS="Executing Libraries..."
    process
    . $WORK_AREA/Source/Library/01_build.lib || ERROR_CODE="LIBRARY_FAILED_TO_LOAD" && endit
    build
    echo "$PACKAGE has been built. Continuing..."
    # Add More Libraries Here
	echo "All Packages have been built."
}
